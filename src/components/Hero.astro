<script>
  import { animate, stagger } from "motion";
  
  const elements = document.querySelectorAll('[data-animate="fade-up"]');
  
  animate(
    elements,
    { opacity: [0, 1], y: [30, 0] },
    { 
      delay: stagger(0.2),
      duration: 0.8,
      easing: [0.22, 1, 0.36, 1]
    }
  );
</script>