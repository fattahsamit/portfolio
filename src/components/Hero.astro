<section id="hero" class="min-h-screen flex items-center justify-center px-6 pt-20">
  <div class="container mx-auto max-w-4xl text-center">
    <div data-animate="fade-up">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-linear-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
        Mohammad Fattah Samit
      </h1>
    </div>
    
    <div data-animate="fade-up" data-delay="200">
      <p class="text-xl md:text-2xl text-gray-400 mb-4">
        Software Engineer - Quality Assurance - Problem Solver
      </p>
